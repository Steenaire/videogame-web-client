<h1>Add a New Video Game:</h1>

<%= form_tag '/videogames', method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :release_date %>
    <%= text_field_tag :release_date %>
  </div>
  <div>
    <%= label_tag :genre %>
    <%= text_field_tag :genre %>
  </div>
  <div>
    <%= label_tag :gameplay %>
    <%= text_field_tag :gameplay %>
  </div>
  <div>
    <%= label_tag :steen_rating %>
    <%= text_field_tag :steen_rating %>
  </div>
  <%= submit_tag "Add Game" %>

<% end %>